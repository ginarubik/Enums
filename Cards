package hu.progmasters.card;

/**
 * Suit enum
 */
enum Suit {
    SPADE,
    DIAMOND,
    CLUB,
    HEART
}

/**
 * Rank enum
 */
enum Rank {
    ACE,
    TWO,
    THREE,
    FOUR,
    FIVE,
    SIX,
    SEVEN,
    EIGHT,
    NINE,
    TEN,
    JACK,
    QUEEN,
    KING
}

/**
 * Card class
 */
public class Card {

    private Suit suit;
    private Rank rank;

    public Card(Suit suit, Rank rank) {
        this.suit = suit;
        this.rank = rank;
    }

    @Override
    public String toString() {
        return rank + " of " + suit;
    }
}

/**
 * Deck class
 */
class Deck {

    private Card[] cards;

    public Deck() {
        cards = new Card[52];

        int i = 0;
        for (Suit suit : Suit.values()) {
            for (Rank rank : Rank.values()) {
                cards[i] = new Card(suit, rank);
                i++;
            }
        }
    }

    public void print() {
        for (int i = 0; i < cards.length; i++) {
            System.out.println(cards[i]);
        }
    }
}
